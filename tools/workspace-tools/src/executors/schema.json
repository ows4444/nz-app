{
  "$schema": "https://json-schema.org/schema",
  "version": 2,
  "title": "Generate Protobuf Types",
  "description": "",
  "type": "object",
  "properties": {
    "entity": {
      "type": "string",
      "description": "The name of the protobuf entity (e.g. user)"
    },
    "outputPath": {
      "type": "string",
      "description": "Where to place generated code",
      "default": "proto"
    },
    "protoDir": {
      "type": "string",
      "description": "Directory containing .proto files",
      "default": "proto"
    }
  },
  "required": ["entity"]
}
