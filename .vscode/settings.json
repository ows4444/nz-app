{
  "cSpell.words": ["dtos", "ianvs", "nodenext", "protoc", "swcrc", "uuidv"],
  "files.autoSave": "off",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.git/**": true,
    "**/out-tsc": true,
    ".yarn*": true
  },
  "search.exclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.git/**": true,
    "**/out-tsc/**": true,
    ".env": true,
    ".env.*": true,
    "apps/**/.env": true,
    "apps/**/.env.*": true
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.ts, ${capture}.spec.ts"
  },
  "explorer.sortOrder": "modified",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    ".vscode": true,
    ".yarn*": true,
    ".nx": true,
    ".husky": true,
    "apps/**/*-e2e": true,
    "apps/**/assets": true,
    "apps/**/webpack.config.js": true,
    "{apps,libs}/**/.spec.swcrc": true,
    "{apps,libs}/**/tsconfig.json": true,
    "{apps,libs}/**/package.json": true,
    "{apps,libs}/**/eslint.config.mjs": true,
    "{apps,libs}/**/jest.config.ts": true,
    "{apps,libs}/**/README.md": true,
    "tsconfig.json": true,
    "eslint.config.mjs": true,
    "jest.*": true,
    "*.lock": true,
    ".prettier*": true,
    "tools": true,
    "tmp": true,
    "**/dist": true,
    "**/out-tsc": true,
    "**/node_modules": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "sqltools.connections": [
    {
      "mysqlOptions": {
        "authProtocol": "default",
        "enableSsl": "Disabled"
      },
      "previewLimit": 50,
      "server": "localhost",
      "port": 3306,
      "driver": "MySQL",
      "name": "nizaami-app-dev",
      "group": "nizaami",
      "database": "database",
      "username": "user",
      "password": "pass"
    }
  ],
  "eslint.validate": ["json"]
}
